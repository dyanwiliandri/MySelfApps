<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5"/> <corners android:radius="8dp"/> </shape>
    </item>
    <item android:top="20dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#90A4AE" android:dashWidth="5dp" android:dashGap="5dp"/>
        </shape>
    </item>
    <item android:left="20dp" android:right="20dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#90A4AE" android:dashWidth="5dp" android:dashGap="5dp"/>
        </shape>
    </item>
</layer-list>