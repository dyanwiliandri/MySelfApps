<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/activity_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/profile" android:scaleType="centerCrop"
        android:background="@drawable/rounded_small" android:clipToOutline="true"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bangun Pagi dan Olahraga"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#50545B" />
        <TextView
            android:id="@+id/activity_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pukul 06.00 WIB"
            android:textSize="14sp"
            android:textColor="#50545B"
            android:alpha="0.7" />
    </LinearLayout>

</LinearLayout>