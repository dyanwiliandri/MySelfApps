<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0DBA4"
    tools:context=".view.GalleryFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Photo Gallery"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#50545B" android:gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp"
        app:cardBackgroundColor="#8FAFA1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Collection"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#50545B" android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gallery_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false" android:paddingVertical="4dp" app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_gallery" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>